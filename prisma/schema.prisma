generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  password_hash String
  url_image     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  Link          Link[]

  @@map("users")
}

model Link {
  id        String   @id @default(uuid())
  url       String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("links")
}
